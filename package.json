{
  "name": "shop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "@sap/hana-client": "^2.6.61"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.0.5",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "hana": "cds deploy --to hana:shop --auto-undeploy",
    "start": "cds run",
    "build": "cds build"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@sap/cds/recommended"
    ],
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off",
      "no-entity-moo": 2
    }
  },
  "cds": {
    "preview": {
      "ui5": {
        "version": "1.80.2"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "hana"
      }
    }
  }
}
